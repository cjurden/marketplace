<%= simple_form_for(@roast, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :roaster, required: true, label: false, placeholder: "Roaster", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control"} %>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: "form-control"} %>
    <%= f.input :image %>
    <div class="checkbox text-center">
      <p>Availability</p>
    <%= f.input :available, required: false, label: false %>
    </div>



    <%= f.button :submit, class: "btn btn-primary btn-block" %>

<% end %>

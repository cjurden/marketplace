
<div class="row">
<div class="col-md-6">
<%= image_tag @roast.image.url(:original), class: "img-responsive"%>
</div>
<div class="col-md-6">
  <h3><%= @roast.name %> roasted by <%= @roast.roaster %></h3>
  <p><%= @roast.description %></p>
  <h4 class="text-center">$<%= @roast.price.to_f / 100 %></h4>
<% if current_user %>
<%= form_tag buy_path(slug: @roast.slug) do %>
  <script
      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-amount="<%= @roast.price %>"
      data-name="marketplace"
      data-description="<%= @roast.name %>"
      data-email="<%= current_user.email %>">
  </script> 
<% end %>
 
<% else %>
 
  <p>Please Login First to Buy</p>
<% end %>
</div>
</div>

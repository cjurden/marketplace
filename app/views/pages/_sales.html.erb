<!-- Partial for Dashboard -->
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Buyer</th>
    </tr>
  </thead>
  <tbody>
  <% @sales.each do |sale| %><!-- Loads in every sale by the user -->
    <tr>
      <td><%= link_to sale.roast.name, pickup_path(sale.guid) %></td>
      <td><%= time_ago_in_words(sale.created_at) %> ago</td>
      <td><%= sale.buyer_email %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<!-- Partial for Dashboard -->
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Price</th>
      <th>Roast Name</th>
      <th>Available</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @roasts.each do |roast| %><!-- Loads in every item added by the user -->
    <tr>
      <td><%= number_to_currency(roast.price.to_f / 100) %></td>
      <td><%= link_to roast.name, roast_path(roast) %></td>
      <td><%= roast.available %></td>
      <td><%= link_to "Edit", edit_roast_path(roast) %></td><!-- User edit roast button -->
    </tr>
    <% end %>
  </tbody>
</table>

<!-- Shows Users Purchased Items, Sales, and Added Items -->

<div class="row">
  <h1 class="text-center">Dashboard</h1>
  <div class="col-md-4">
	  <h3 class="text-center">
		  Roasts <%= link_to "New Roast", new_roast_path, class: "btn btn-primary btn-sm" %>
	  </h3>
	  <% if @roasts.size == 0 %>
		  <p class="text-center">
		  You do not have any roast yet. Please create new roast first!
		  </p>
	  <% else %>
		  <%= render "roasts" %><!-- Loads roasts partial to view all of the items added by the user-->
	  <% end %>
  </div>
  <div class="col-md-4">
	  <h3 class="text-center">
		  Purchased
	  </h3>
	  <% if @purchased.size == 0 %>
		  <p class="text-center">
		  You have not purchased any items yet.
		  </p>
	  <% else %>
		  <%= render "purchased" %><!-- Loads purchased partial to view all items purchased by the user-->
	  <% end %>
  </div>
  <div class="col-md-4">
	  <h3 class="text-center">
		  Sales
	  </h3>
	  <% if @sales.size == 0 %>
		  <p class="text-center">
		    You have not sold any items yet.
		  </p>
	  <% else %>
		  <%= render "sales" %><!-- Loads sales partial to view all sales by the user -->
	  <% end %>
  </div>
</div>

